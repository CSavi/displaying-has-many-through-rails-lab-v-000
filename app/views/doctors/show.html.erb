<h1>Doctor: <%= @doctor.name %></h1>
<h2>Department: <%= @doctor.department %></h2>
<h2>Appointments: </h2>

  <% @doctor.appointments.each do |appointment| %>
  <%= appointment.appointment_datetime.shrftime("%B %d, %Y at ) %>
  <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
  <% end %>
